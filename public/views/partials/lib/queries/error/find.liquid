{% comment %}
  Loads a form error.

  Params:
    - form_name
    - clear boolean
      Clear the errors or not. Default: true

{% endcomment %}
{% liquid
  if clear == nil
    assign clear = true
  endif

  assign forms = context.session.forms
  unless forms
    return nil
  endunless

  assign errors = forms[form_name]['errors']

  if errors and clear
    function res = 'modules/form/lib/commands/error/clear', form_name: form_name,
  endif

  return errors
%}
