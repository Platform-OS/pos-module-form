{% comment %}
  Clears a form's error.

  Params:
    - form_name
{% endcomment %}
{% liquid
  function object = 'modules/form/lib/commands/error/clear/build', form_name: form_name, errors: errors
  function object = 'modules/form/lib/commands/error/clear/check', object: object

  if object.valid
    assign forms = context.session.forms
    unless forms
      return object
    endunless
    unless forms[object.form_name]
      return object
    endunless

    hash_assign forms[object.form_name]['errors'] = nil

    session forms = forms
  endif

  return object
%}
